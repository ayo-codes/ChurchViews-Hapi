<div class="my-6 subtitle has-text-centered">
  <p>List of Users on ChurchViews</p>
  <p>Number of Users Currently on the app: {{numberOfUsers}}</p> 
</div>
<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Surname</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <td>
          {{firstName}}
        </td>
        <td>
          {{lastName}}
        </td>
        <td>
          {{email}}
        </td>
        <td>
          <a href="/denomination/{{../denomination._id}}/deletechurch/{{_id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
      {{/each}}
  </tbody>
</table>